<MudDrawer @bind-Open="IsDrawerOpen" Overlay=false Variant="@DrawerVariant.Temporary" ClipMode="@DrawerClipMode.Always" Elevation="1" Class="flex-column z-10 overflow-hidden">
    @ChildContent
    <MudPaper Elevation="0" Outlined="false" Class="flex-fill" />
    <MudPaper Elevation="0" Outlined="false" Class="d-flex flex-nowrap justify-center align-center">
        <Socials IconColor="Color.Primary"/>
    </MudPaper>
</MudDrawer>

@code {
    [CascadingParameter]
    public MainLayout? MainLayout { get; set; }
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private bool IsDrawerOpen
    {
        get { return MainLayout == null ? false : MainLayout.DrawerOpen; }
        set { /*if (MainLayout != null) MainLayout.DrawerOpen = value;*/ }
    }
}