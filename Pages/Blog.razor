<!--atpage "/blog"-->

<PageTitle>TheToby - Blog</PageTitle>

<MudDrawer @bind-Open="IsDrawerOpen" Variant="@DrawerVariant.Responsive" ClipMode="@DrawerClipMode.Always" Elevation="1" class="z-10">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Blogs</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Href="blog" Match="NavLinkMatch.Prefix">Latest</MudNavLink>
    </MudNavMenu>
</MudDrawer>

<MudContainer MaxWidth="MaxWidth.Large" Class="my-5 pt-5">
    <MudText Typo="Typo.h3" GutterBottom="true">This is the title!</MudText>
    <MudText Class="mb-8">Blog posts will appear in this space looking something like this.</MudText>
</MudContainer>

@code{
    [CascadingParameter]
    public MainLayout? MainLayout { get; set; } 

    protected override void OnInitialized()
    {
        if(MainLayout != null)
            MainLayout.SetDrawerToggleDisabled(false);
    }

    private bool IsDrawerOpen 
    { 
        get { return MainLayout == null ? false : MainLayout.DrawerOpen; }
        set { if (MainLayout != null)  MainLayout.DrawerOpen = value; }
    }
}