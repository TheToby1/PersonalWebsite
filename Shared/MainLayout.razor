        <MudContainer Style="height:inherit" MaxWidth="MaxWidth.Small" Class="d-inline-flex flex-row flex-grow-1 gap-2 align-center justify-center">
            <!-- <MudNavLink Class="d-flex" Href="blog" Match="NavLinkMatch.Prefix">
                <MudText Class="mr-3" Align="@Align.Center">Blog</MudText>
            </MudNavLink> -->
            <MudPaper Class="d-inline-flex flex-shrink-0 flex-auto" Width="10%" />
            <MudLink Style="max-height:100%" Class="d-inline-flex flex-auto align-center justify-center ma-0 pa-0" Href="">
                <MudIcon Style="padding-top:2px; height:100%; min-width:100px; width:35%; color:white" Class="d-inline-flex flex-grow" ViewBox="0 0 44.957 24" Icon="@Custom_Icons.TheToby" Title="TheToby" />
            </MudLink>
            <MudPaper Class="d-inline-flex flex-auto" Width="10%" />
            <!-- <MudNavLink Class="d-flex" Href="projects" Match="NavLinkMatch.Prefix">
                <MudText Class="mr-3" Align="@Align.Center">Projects</MudText>
            </MudNavLink> -->
