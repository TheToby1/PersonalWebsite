    <MudMainContent>
        <CascadingValue Value="this">
            @Body
        </CascadingValue>
    </MudMainContent>
    <MudAppBar Class="align-center z-50" Bottom="true" Elevation="0" Dense="true">
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/TheToby1" Target="_blank" />
        <MudIconButton Icon="@Custom_Icons.Mastodon" Color="Color.Inherit" Link=@($"https://social.vivaldi.net/@TheToby") Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Inherit" Link="https://linkedin.com/in/TobyBurns" Target="_blank" />
        <!-- ToDo: Add Bookwyrm-->
    </MudAppBar>
</MudLayout>

@code {
    public bool DrawerOpen { get; set; } = false;
    bool _drawerToggleDisabled = true;

    void DrawerToggle()
    {
        DrawerOpen = !DrawerOpen;
    }

    public void SetDrawerToggleDisabled(bool disabled)
    {
        _drawerToggleDisabled = disabled;
        if (_drawerToggleDisabled)
        {
            DrawerOpen = false;
        }
        InvokeAsync(() => StateHasChanged());
    }
}